FROM php:8.3-apache

# 1. Install system dependencies
RUN apt-get update && apt-get install -y \
    libpng-dev \
    libjpeg-dev \
    libfreetype6-dev \
    libzip-dev \
    libonig-dev \
    libxml2-dev \
    zip \
    unzip \
    curl

# 2. Clean apt cache to reduce image size
RUN apt-get clean && rm -rf /var/lib/apt/lists/*

# 3. Install PHP extensions
# (Removed ctype, tokenizer, and pdo as they are already in the PHP 8.3 core)
RUN docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install -j$(nproc) \
    bcmath \
    gd \
    mbstring \
    mysqli \
    pdo_mysql \
    zip \
    xml

# 4. Enable Apache mod_rewrite
RUN a2enmod rewrite

# 5. Set PHP settings
RUN echo "allow_url_fopen=On" > /usr/local/etc/php/conf.d/custom.ini \
    && echo "memory_limit=512M" >> /usr/local/etc/php/conf.d/custom.ini \
    && echo "upload_max_filesize=128M" >> /usr/local/etc/php/conf.d/custom.ini \
    && echo "post_max_size=128M" >> /usr/local/etc/php/conf.d/custom.ini

# 6. Copy application files
COPY . /var/www/html

# 7. Set permissions for ViserLab/Laravel
RUN chown -R www-data:www-data /var/www/html \
    && find /var/www/html -type d -exec chmod 755 {} \; \
    && find /var/www/html -type f -exec chmod 644 {} \; \
    && if [ -d /var/www/html/core/storage ]; then chmod -R 775 /var/www/html/core/storage; fi \
    && if [ -d /var/www/html/core/bootstrap/cache ]; then chmod -R 775 /var/www/html/core/bootstrap/cache; fi

WORKDIR /var/www/html
