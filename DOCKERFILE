FROM php:8.3-apache

# 1. Install system dependencies and Git (needed for Composer)
RUN apt-get update && apt-get install -y \
    libpng-dev \
    libjpeg-dev \
    libfreetype6-dev \
    libzip-dev \
    libonig-dev \
    libxml2-dev \
    zip \
    unzip \
    curl \
    git

# 2. Install PHP extensions
RUN docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install -j$(nproc) \
    bcmath \
    gd \
    mbstring \
    mysqli \
    pdo_mysql \
    zip \
    xml

# 3. Install Composer (The missing piece)
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# 4. Enable Apache mod_rewrite
RUN a2enmod rewrite

# 5. Copy application files
COPY . /var/www/html

# 6. Install PHP dependencies
# This moves into the 'core' folder and runs composer install
RUN if [ -f /var/www/html/core/composer.json ]; then \
    cd /var/www/html/core && \
    composer install --no-dev --optimize-autoloader --ignore-platform-reqs; \
    fi

# 7. Set permissions
RUN chown -R www-data:www-data /var/www/html \
    && find /var/www/html -type d -exec chmod 755 {} \; \
    && find /var/www/html -type f -exec chmod 644 {} \; \
    && if [ -d /var/www/html/core/storage ]; then chmod -R 775 /var/www/html/core/storage; fi \
    && if [ -d /var/www/html/core/bootstrap/cache ]; then chmod -R 775 /var/www/html/core/bootstrap/cache; fi

WORKDIR /var/www/html
